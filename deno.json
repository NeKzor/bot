{
  "tasks": {
    "docs:build": "mdbook build docs",
    "docs:serve": "mdbook serve docs"
  },
  "lint": {
    "exclude": [
      "docs"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "docs/book",
      "src/data",
      "src/fileloader.ts"
    ]
  }
}
