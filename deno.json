{
  "tasks": {
    "dev": "deno task --cwd src dev",
    "prod": "deno task --cwd src prod",
    "docs:build": "mdbook build docs",
    "docs:serve": "mdbook serve docs",
    "news": "deno task --cwd scripts news",
    "stats": "deno task --cwd scripts stats"
  },
  "lint": {
    "exclude": [
      "docs"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "docs/book",
      "src/data"
    ]
  },
  "importMap": "./import_map.json"
}
